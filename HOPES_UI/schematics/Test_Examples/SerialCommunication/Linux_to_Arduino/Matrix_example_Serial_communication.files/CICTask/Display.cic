// ##DEFINE_PORT_SECTION::START
STATIC int port_in;
// ##DEFINE_PORT_SECTION::END


STATIC int mat[3][3];

/////////////////////////////////////
// init code
/////////////////////////////////////

TASK_INIT
{
// ##INIT_PORT_SECTION::START
    port_in = PORT_INITIALIZE(TASK_ID, "in");
// ##INIT_PORT_SECTION::END

    // TODO: task initialize code

}


/////////////////////////////////////
// go code
/////////////////////////////////////

TASK_GO
{

    int i, j;
    int nDataSize;
    uem_result result;

    result = UFPort_GetNumOfAvailableData(port_in, 0, &nDataSize);
    if(result != ERR_UEM_NOERROR) return;
    if(nDataSize < sizeof(int)*9) return;

    MQ_RECEIVE(port_in, (unsigned char*) mat, sizeof(int)*9);
 
    for (i=0 ; i<3 ; i++){
         for (j=0 ; j<3 ; j++){
                UEM_DEBUG_PRINT("%d ", mat[i][j]);
                
            }
         UEM_DEBUG_PRINT("\n");
    }
    
    


}



