#define KERNEL_HEIGHT   1
#define STRIDE          1
#define PADDING_WIDTH   0
#define PADDING_HEIGHT  0
#define GROUPS          1

#define NUMBER_OF_LAYERS 152

#define EXECUTION_COUNT 3

#define PRINTopt 0
